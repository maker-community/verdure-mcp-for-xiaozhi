@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Class="app-bar-elevated">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-3" Style="font-weight: 500; letter-spacing: 0.0125em;">Verdure MCP Platform</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudText Typo="Typo.body2" Class="mr-3" Style="font-weight: 500;">@context.User.Identity?.Name</MudText>
                <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" />
            </Authorized>
            <NotAuthorized>
                <MudButton Href="/login" Variant="Variant.Text" Color="Color.Inherit" Style="text-transform: none; font-weight: 500;">Login</MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    
    <MudDrawer @bind-Open="_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Always" Class="drawer-elevated">
        <NavMenu />
    </MudDrawer>
    
    <MudMainContent Class="main-content-bg">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-6 px-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

