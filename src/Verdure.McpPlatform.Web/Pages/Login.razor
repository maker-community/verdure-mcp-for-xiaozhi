@page "/login"
@using Microsoft.Extensions.Localization
@using Verdure.McpPlatform.Web.Resources
@inject NavigationManager Navigation
@inject IStringLocalizer<SharedResources> Loc

<PageTitle>@Loc["Login"] - @Loc["AppTitle"]</PageTitle>

<div class="d-flex justify-center align-center" style="min-height: 70vh;">
    <MudCard Elevation="4" Style="max-width: 450px; width: 100%;">
        <MudCardContent Class="pa-8 text-center">
            <MudIcon Icon="@Icons.Material.Filled.Cloud" 
                    Size="Size.Large" 
                    Color="Color.Primary" 
                    Style="font-size: 4rem; margin-bottom: 1rem;" />
            <MudText Typo="Typo.h4" Class="mb-2" Style="font-weight: 600;">
                欢迎登录
            </MudText>
            <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mb-6">
                Verdure MCP Platform
            </MudText>

            <MudButton Variant="Variant.Filled" 
                      Color="Color.Primary" 
                      FullWidth="true"
                      Size="Size.Large"
                      Href="authentication/login"
                      StartIcon="@Icons.Material.Filled.Login"
                      Style="padding: 12px 24px; font-size: 1rem;">
                使用 Keycloak 登录
            </MudButton>

            <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-6">
                登录后即可管理您的 MCP 服务配置
            </MudText>
        </MudCardContent>
    </MudCard>
</div>
