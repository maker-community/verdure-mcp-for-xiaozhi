    private async ValueTask<ItemsProviderResult<McpServiceConfigDto>> LoadServicesVirtualized(
        ItemsProviderRequest request)
    {
        try
        {
            var startPage = (request.StartIndex / ServicePageSize) + 1;
            var endIndex = request.StartIndex + request.Count - 1;
            var endPage = (endIndex / ServicePageSize) + 1;

            var allItems = new List<McpServiceConfigDto>();
            int totalCount = 0;

            for (var page = startPage; page <= endPage; page++)
            {
                var pagedRequest = new PagedRequest
                {
                    Page = page,
                    PageSize = ServicePageSize,
                    SearchTerm = _serviceSearchTerm,
                    SortBy = _serviceSortBy,
                    SortOrder = "asc"
                };

                PagedResult<McpServiceConfigDto> result;
                if (_serviceTabIndex == 0)
                {
                    result = await McpServiceConfigService.GetServicesPagedAsync(pagedRequest);
                }
                else
                {
                    result = await McpServiceConfigService.GetPublicServicesPagedAsync(pagedRequest);
                }

                allItems.AddRange(result.Items);
                totalCount = result.TotalCount;
            }

            var skip = request.StartIndex % ServicePageSize;
            var items = allItems.Skip(skip).Take(request.Count).ToList();

            return new ItemsProviderResult<McpServiceConfigDto>(items, totalCount);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Loc["Error"]}: {ex.Message}", Severity.Error);
            return new ItemsProviderResult<McpServiceConfigDto>([], 0);
        }
    }

