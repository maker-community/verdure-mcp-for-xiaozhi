{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Verdure.McpPlatform.Api.Services.BackgroundServices": "Debug",
      "Verdure.McpPlatform.Api.Services.ConnectionState": "Debug",
      "Verdure.McpPlatform.Api.Services.DistributedLock": "Debug"
    }
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "mcpdb": "Data Source=Data/mcpplatform.db",
    "identitydb": "Data Source=Data/identity.db"
  },
  "Database": {
    "TablePrefix": "verdure_",
    "Provider": "SQLite"
  },
  "ConnectionMonitor": {
    "CheckIntervalSeconds": 15,
    "HeartbeatTimeoutSeconds": 45,
    "ReconnectCooldownSeconds": 30
  }
}
