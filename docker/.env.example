# Verdure MCP Platform - Environment Variables
# Copy this file to .env and update with your actual values

# PostgreSQL Configuration
POSTGRES_PASSWORD=postgres

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Production

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Identity Provider (Keycloak) Configuration
# Note: Use http://localhost:8080 for local development
# The realm will be auto-created on first start
Oidc_Authority=http://localhost:8080
Oidc_Realm=maker-community
Oidc_ClientId=verdure-mcp
Oidc_RequireHttpsMetadata=false

# CORS Configuration (if external access needed)
ALLOWED_ORIGIN=https://yourdomain.com

# Connection Monitor Settings (optional, defaults shown)
MONITOR_CHECK_INTERVAL=30
MONITOR_HEARTBEAT_TIMEOUT=90
MONITOR_RECONNECT_COOLDOWN=60

# Logging Levels (optional)
LOG_LEVEL=Information
LOG_LEVEL_ASPNET=Warning
LOG_LEVEL_VERDURE=Information

# pgAdmin Configuration (if using pgAdmin)
PGADMIN_EMAIL=admin@verdure.local
PGADMIN_PASSWORD=admin

# Note: Never commit .env file to version control!
